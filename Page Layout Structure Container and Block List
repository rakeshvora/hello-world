after.body.start

Header
	header.container = page-header
		header.panel.wrapper = panel wrapper
			header.panel = panel header
				<block class="Magento\Store\Block\Switcher" name="store_language" as="store_language" template="Magento_Store::switch/languages.phtml">
				<block class="Magento\Customer\Block\Account\Navigation" name="top.links">
		header-wrapper = header content
			logo = <block class="Magento\Theme\Block\Html\Header\Logo" name="logo">
			minicart
			block-search
			compare wrapper
Left

Main
	page.top = no class or html tag
		<block class="Magento\Framework\View\Element\Template" name="navigation.sections" before="-" template="Magento_Theme::html/sections.phtml">
	main.content = page-main
		columns.top = 
			<block class="Magento\Theme\Block\Html\Title" name="page.main.title" template="Magento_Theme::html/title.phtml"/>
			page.messages
		columns = columns
			main = column main
	page.bottom.container = page-bottom

Footer
	footer-container = page-footer
		footer = footer content
            <block class="Magento\Store\Block\Switcher" name="store_switcher" as="store_switcher" template="Magento_Store::switch/stores.phtml"/>
            <block class="Magento\Framework\View\Element\Html\Links" name="footer_links">
                <arguments>
                    <argument name="css_class" xsi:type="string">footer links</argument>
                </arguments>
            </block>
            <block class="Magento\Theme\Block\Html\Footer" name="copyright" template="Magento_Theme::html/copyright.phtml"/>

before.body.end


